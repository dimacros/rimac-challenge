{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "strict": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": ".build",
    "rootDir": "./"
  }
}